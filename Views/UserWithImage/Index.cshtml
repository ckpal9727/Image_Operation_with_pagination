@section scripts{
    <script>
        $(document).ready(function () {
            $('.table').DataTable({
                "processing": true,
                "serverSide": true,
                "ajax": {
                    "url": '@Url.Action("GetUsers", "UserWithImage")', // Adjust with your controller name
