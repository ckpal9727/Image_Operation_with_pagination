                "columns": [
                    { "data": "Name" },
                    { "data": "State" }, // Assuming you want the state name
                    { "data": "City" } // Assuming you want the city name
                ]
            });
            if ($('#tableBody tr').length === 0) {
                // If no rows exist, show the "No data found" message
                $('#noRecordFound').show();
            } else {
                // Hide the "No data found" message if there are rows
                $('#noRecordFound').hide();
            }


            $('.delete-btn').click(function (e) {
                var record = $(this).data("id");
