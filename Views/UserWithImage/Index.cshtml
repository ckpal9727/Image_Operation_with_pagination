                //         console.log("Deleted successfully id " + record);
                //     }
                // })
                $.ajax({
                    type: "DELETE",
                    url: "/UserWithImage/Delete/" + record,
                    contentType: "application/json",
                    success: function (data) {
                        console.log("Deleted successfully id " + record);
                        $('#row-' + record).remove();
                    },
                    error: function (xhr, status, error) {
